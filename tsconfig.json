{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.d.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",

    "declaration": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],

    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
