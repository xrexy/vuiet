{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.d.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "outDir": "dist",

    "declaration": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
